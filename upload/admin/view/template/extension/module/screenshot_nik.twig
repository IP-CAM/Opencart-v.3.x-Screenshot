{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <a href="{{ clearAllScreenshots }}" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
            <div class="col-sm-10">
              <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
              {% if error_name %}
              <div class="text-danger">{{ error_name }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-layout-name"><span data-toggle="tooltip" title="{{ help_layout_name }}">{{ entry_layout_name }}</span></label>
            <div class="col-sm-10">
              <select name="layout_name" id="input-layout-name" class="form-control">
                {% for layout in layouts %}
                  <option value="{{ layout.name|lower }}" {% if layout_name == layout.name|lower %}selected="selected"{% endif %}>{{ layout.name }}</option>
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-frequency-save-screenshot">{{ entry_frequency_save_screenshot }}</label>
            <div class="col-sm-5">
              <input type="text" name="frequency_save_screenshot" value="{{ frequency_save_screenshot }}" placeholder="{{ entry_frequency_save_screenshot }}" id="input-frequency-save-screenshot" class="form-control" />
              {% if error_frequency_save_screenshot %}
                <div class="text-danger">{{ error_frequency_save_screenshot }}</div>
              {% endif %}
            </div>
            <div class="col-sm-5">
              <select name="frequency_save_screenshot_unit" id="input-frequency-save-screenshot-unit" class="form-control">
                <option value="0" {% if frequency_save_screenshot_unit == '0' %}selected="selected"{% endif %}>{{ text_seconds }}</option>
                <option value="1" {% if frequency_save_screenshot_unit == '1' %}selected="selected"{% endif %}>{{ text_minutes }}</option>
                <option value="2" {% if frequency_save_screenshot_unit == '2' %}selected="selected"{% endif %}>{{ text_hours }}</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-date-clear-folder"><span data-toggle="tooltip" title="{{ help_date_clear_folder }}">{{ entry_date_clear_folder }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="date_clear_folder" value="{{ date_clear_folder }}" placeholder="{{ entry_date_clear_folder }}" id="input-date-clear-folder" class="form-control"/>
              {% if error_date_clear_folder %}
                <div class="text-danger">{{ error_date_clear_folder }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="status" id="input-status" class="form-control">
                {% if status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
