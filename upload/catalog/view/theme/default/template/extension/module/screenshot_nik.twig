<script>
  $(document).ready(function () {
      setInterval(function () {
          html2canvas($('body')[0]).then((canvas) => {
              var imgData = canvas.toDataURL('image/png');

              var output = encodeURIComponent(imgData);

              var Parameters = "image=" + output + "&layout_name=" + '{{ layout_name }}';

              $.ajax({
                  url: 'index.php?route=extension/module/screenshot_nik/saveScreenshot',
                  type: "POST",
                  data: Parameters
              });
          })
      }, {{ frequency }})
  })
</script>